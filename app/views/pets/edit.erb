<h1>Update Pet</h1>
<form action="/pets/<%= @pet.id %>" method="post">
  <label for="pet[name]">Pet name:</label><br>
  <input type="text" name="pet[name]" id="pet_name" value="@pet.name"><br>
  <% Owner.all.each do |owner| %>
    <input type="checkbox" name="pet[owner_id]" value="<%= owner.id %>" id="<%= owner.id %>" value="<%=owner.id%>" <%='checked' if @pet.owner == owner %>><%= owner.name %></input>
  <% end %>
  <p>and/or, create a new owner:</p>
  <label>name:</label><br>
  <input  type="text" name="owner[name]" id="owner_name"></input><br>
  <input type="submit" value="Update Pet">
</form>
